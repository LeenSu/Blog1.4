<h1>Cita</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Tema</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @citas.each do |citum| %>
      <tr>
        <td><%= citum.nombre %></td>
        <td><%= citum.fecha %></td>
        <td><%= citum.tema %></td>
        <td><%= citum.status %></td>
        <td><%= link_to 'Ver', citum, class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_citum_path(citum), class: 'btn btn-default' %></td>
        <td><%= link_to 'Eliminar', citum, method: :delete, data: { confirm: 'Estas Seguro?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Cita', new_citum_path, class: 'btn btn-default' %>

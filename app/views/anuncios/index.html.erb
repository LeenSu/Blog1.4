<h1>Anuncios</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Imagen</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @anuncios.each do |anuncio| %>
      <tr>
        <td><%= anuncio.nombre %></td>
        <td><%= image_tag anuncio.imagen,height: 100 %></td>
        <td><%= anuncio.link %></td>
        <td><%= link_to 'Ver', anuncio, class: 'btn btn-default' %></td>
        <td><%= link_to 'Editar', edit_anuncio_path(anuncio), class: 'btn btn-default' %></td>
        <td><%= link_to 'Eliminar', anuncio, method: :delete, data: { confirm: 'Estas Seguro?' }, class: 'btn btn_default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Anuncio', new_anuncio_path, class: 'btn btn-default' %>

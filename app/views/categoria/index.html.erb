<h1>Categoria</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categoria.each do |categorium| %>
      <tr>
        <td><%= categorium.nombre %></td>
        <td><%= link_to 'Editar', edit_categorium_path(categorium), class: 'btn btn-default' %></td>
        <td><%= link_to 'Eliminar', categorium, method: :delete, data: { confirm: 'Estas Seguro?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoria', new_categorium_path, class: 'btn btn-default' %>

<h1>Comentarios</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Contenido</th>
      <th>Articulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.nombre %></td>
        <td><%= comentario.contenido %></td>
        <td><%= comentario.articulo.titulo  %></td>
        <td><%= link_to 'Editar', edit_comentario_path(comentario), class: 'btn btn-default' %></td>
        <td><%= link_to 'Eliminar', comentario, method: :delete, data: { confirm: 'Estas Seguro?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>


